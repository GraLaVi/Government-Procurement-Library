# Environment Variables Documentation
# Copy this file to .env.local for local overrides
#
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Variables without the prefix are server-side only

# ===========================================
# API Configuration
# ===========================================

# Base URL for the backend API (required)
# Development: https://alanapidev.lamlinks.com/api/v1
# Production:  https://alanapi.lamlinks.com/api/v1
NEXT_PUBLIC_API_URL=

# Queue task processing API (server-side only)
# Development: https://alanapidev.lamlinks.com/alan/process
# Production:  https://alanapi.lamlinks.com/alan/process
QUEUE_TASK_API_URL=

# ===========================================
# Application Settings
# ===========================================

# Application name displayed in UI
NEXT_PUBLIC_APP_NAME=Gralavi

# Application version
NEXT_PUBLIC_APP_VERSION=0.1.0

# Current environment (development, staging, production)
NEXT_PUBLIC_ENV=development

# Enable debug mode (shows additional logging)
NEXT_PUBLIC_DEBUG=false

# ===========================================
# Optional: Local Overrides (.env.local only)
# ===========================================

# Override API URL for local development
# NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Any secrets should go in .env.local (not committed to git)
# Example:
# API_SECRET_KEY=your-secret-key
